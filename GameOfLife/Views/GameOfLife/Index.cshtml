@{
    ViewBag.Title = "Game of Life";
}
<link href="~/Content/Custom.css" rel="stylesheet" />
<script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.14/angular.min.js"></script>
<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" /><div ng-app='app'>
    <div class="container" ng-controller='goiCtrl'>
        <div class="page-header text-center">
            <h1>
                <span class="text-muted">Conway's Game of Life</span>
            </h1>
        </div>
        <div class="goiGridContainer">
            <div class="buttons-container">
                <button class='btn btn-primary margin-bottom-20px'
                        ng-show="!isStarted"
                        ng-click="next()">
                    Generate Next Pattern
                </button>
            </div>

            <table class='grid'>
                <tr ng-repeat="row in goiGrid">
                    <td ng-repeat="cell in row"
                        ng-class="{'alive':cell.isAlive}"
                        ng-click="cell.toggle()"></td>
                </tr>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    var rootUrl = '@Url.Content("~")';
    var goiGridSize = @System.Configuration.ConfigurationManager.AppSettings["GOIGridSize"];
</script>
<script src="~/Scripts/GOI/GOIModule.js"></script>
<script src="~/Scripts/GOI/GOIService.js"></script>
<script src="~/Scripts/GOI/GOIController.js"></script>
